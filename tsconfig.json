{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "useDefineForClassFields": true,
        "outDir": "dist",
        "rootDir": "src",
        "types": [
            "vitest/globals",
            "node"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}